BoxLayout:
    orientation: 'vertical'
    Label:
        text: 'Trip location'
        color: (0,0,0,1)
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        id: trip_location
        size_hint_y: 0.15
    BoxLayout:
        size_hint_y: 0.15
        orientation: 'horizontal'
        Spinner:
            on_text: print(spinner.text)
            values: ('Japan', 'Australia', 'America', 'Custom')
            id: spinner
            size_hint_x: 0.4
            canvas.before:
                Color:
                    rgba: 1,1,1,.2
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            id: input_location
            text: ''
            size_hint_x: 0.6
            canvas.before:
                Color:
                    rgba: 1,0,1,0.4
                Rectangle:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        size_hint_y: 0.15
        orientation: 'horizontal'
        Label:
            size_hint_x: 0.4
            text: 'Australia'
            id: country_name
            canvas.before:
                Color:
                    rgba: 1,1,1,.3
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            size_hint_x: 0.6
            id: input_home

    Label:
        text: 'Today is:'
        size_hint_y: 0.35
        id: date_label
        color: (0,0,0,1)
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        size_hint_y: 0.2
        Label:
            id: status
            text: 'awaiting details'
            size_hint_x: 0.6
            canvas.before:
                Color:
                    rgba: 1,1,1,.3
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            id: update_currency
            text: 'Update Currency'
            size_hint_x: 0.4
            on_press: app.updated_time(), app.current_date(), app.convert(spinner.text)